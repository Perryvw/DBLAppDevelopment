<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".BirthActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/app_birth"
            android:id="@+id/textView2" android:layout_alignParentStart="true" android:textIsSelectable="false"
            android:textSize="20dp" android:typeface="serif"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startAsHiker"
            android:text="@string/hiker"
            android:background="@drawable/orange_button"
            android:id="@+id/button"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView2"
            android:textSize="30dip"
            android:textStyle="bold" android:layout_marginTop="20dip" android:layout_marginBottom="30dp"
            android:typeface="serif"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startAsDriver"
            android:text="@string/driver"
            android:background="@drawable/orange_button"
            android:id="@+id/button2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/button"
            android:layout_below="@+id/button"
            android:textSize="30dp"
            android:textStyle="bold" android:typeface="serif"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/already_registered"
            android:id="@+id/textView3"
            android:layout_marginTop="50dip"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true" android:typeface="serif" android:textSize="25dp"
            android:layout_marginBottom="5dip"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:background="@drawable/orange_button"
            android:id="@+id/button3"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textStyle="normal" android:typeface="serif"/>


</RelativeLayout>
